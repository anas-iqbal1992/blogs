<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <h3>SignUp</h3>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-5 ">
                    <div class="card">
                        <div class="card-body">
                            <form method="POST" action="/registration">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label>Name</label>
                                            <input type="text"
                                                class="form-control <%= formErrors.name ? 'is-invalid' :'' %>"
                                                name="name" value="<%= formData.name %>" placeholder="Enter Name">
                                            <% if(formErrors.name){ %>
                                                <div class="invalid-feedback">
                                                    <%- formErrors.name.msg %>
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label>Phone</label>
                                            <input type="text"
                                                class="form-control <%= formErrors.phone ? 'is-invalid' :'' %>"
                                                name="phone" maxlength="10"
                                                onkeypress="return event.charCode >= 48 && event.charCode <= 57"
                                                value="<%= formData.phone %>" placeholder="Enter Phone">
                                            <% if(formErrors.phone){ %>
                                                <div class="invalid-feedback">
                                                    <%- formErrors.phone.msg %>
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label>Gender</label><br />
                                            <select class="form-control <%= formErrors.gender ? 'is-invalid' :'' %>"
                                                name="gender">
                                                <option value="female">Female</option>
                                                <option value="male">Male</option>
                                            </select>
                                            <% if(formErrors.gender){ %>
                                                <div class="invalid-feedback">
                                                    <%- formErrors.gender.msg %>
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input type="text"
                                                class="form-control <%= formErrors.email ? 'is-invalid' :'' %>"
                                                name="email" value="<%= formData.email %>" placeholder="Enter email">
                                            <% if(formErrors.email){ %>
                                                <div class="invalid-feedback">
                                                    <%- formErrors.email.msg %>
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label>Password</label>
                                            <input type="password"
                                                class="form-control <%= formErrors.password ? 'is-invalid' :'' %>"
                                                name="password" value=""
                                                placeholder="Enter password">
                                            <% if(formErrors.password){ %>
                                                <div class="invalid-feedback">
                                                    <%- formErrors.password.msg %>
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label>Confirm Password</label>
                                            <input type="password"
                                                class="form-control <%= formErrors.confirmPassword ? 'is-invalid' :'' %>"
                                                name="confirmPassword" value=""
                                                placeholder="Enter Confirm Password">
                                            <% if(formErrors.confirmPassword){ %>
                                                <div class="invalid-feedback">
                                                    <%- formErrors.confirmPassword.msg %>
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <button class="btn btn-info" type="submit">Submit</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>