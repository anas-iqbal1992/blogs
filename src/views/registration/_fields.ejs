<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control <%= formErrors.name ? 'is-invalid' :'' %>" name="name"
                value="<%= formData.name %>" placeholder="Enter Name">
            <% if(formErrors.name){ %>
                <div class="invalid-feedback">
                    <%- formErrors.name.msg %>
                </div>
                <% } %>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <label>Phone</label>
            <input type="text" class="form-control <%= formErrors.phone ? 'is-invalid' :'' %>" name="phone"
                maxlength="10" onkeypress="return event.charCode >= 48 && event.charCode <= 57"
                value="<%= formData.phone %>" placeholder="Enter Phone">
            <% if(formErrors.phone){ %>
                <div class="invalid-feedback">
                    <%- formErrors.phone.msg %>
                </div>
                <% } %>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <label>Gender</label><br />
            <select class="form-control <%= formErrors.gender ? 'is-invalid' :'' %>" name="gender">
                <option value="female" <%=formData.gender==='female' ?'selected':'' %>>Female</option>
                <option value="male" <%=formData.gender==='male' ?'selected':'' %>>Male</option>
            </select>
            <% if(formErrors.gender){ %>
                <div class="invalid-feedback">
                    <%- formErrors.gender.msg %>
                </div>
                <% } %>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control <%= formErrors.email ? 'is-invalid' :'' %>" name="email"
                value="<%= formData.email %>" placeholder="Enter email">
            <% if(formErrors.email){ %>
                <div class="invalid-feedback">
                    <%- formErrors.email.msg %>
                </div>
                <% } %>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <button class="btn btn-info" type="submit">Update</button>
        </div>
    </div>
</div>