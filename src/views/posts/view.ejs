<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <img class="card-img-top" style="height: 300px;" src="/uploads/<%- model.image %>" alt="Card image cap">
                <h4 class="card-title">
                    <%- model.title%>
                </h4>
                <p class="card-text">
                    <%= model.description %>
                </p>
                <p>
                    <%- dateFormat(model.createdAt) -%>
                </p>
            </div>
        </div>
    </div>
</div>