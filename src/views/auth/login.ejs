<main>
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 login-section-wrapper">
        
        <%- include('./../common/messages') %> 
        <div class="login-wrapper my-auto">
          <h1 class="login-title">Log in</h1>
          <form method="POST" action="/login">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" name="email" id="email" value="<%= formData.email %>"
                class="form-control <%= formErrors.email ? 'is-invalid' :'' %>"
                placeholder="email@example.com">
              <% if(formErrors.email){ %>
              <div class="invalid-feedback">
                <%- formErrors.email.msg %>
              </div>
              <% } %>
            </div>
            <div class="form-group mb-4">
              <label for="password">Password</label>
              <input type="password" name="password" id="password"
                class="form-control <%= formErrors.password ? 'is-invalid' :'' %>"
                placeholder="enter your passsword">
              <% if(formErrors.password){ %>
              <div class="invalid-feedback">
                <%- formErrors.password.msg %>
              </div>
              <% } %>
            </div>
            <button type="submit" class="btn btn-block login-btn">Login</button>
          </form>
          <a href="/forget-password" class="forgot-password-link">Forgot password?</a>&nbsp;&nbsp;
          <a class="" href="/registration">SignUp</a>
        </div>
      </div>
    </div>
  </div>
</main>